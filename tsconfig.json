{
    "compilerOptions": {
      "target": "ES2019",
      "module": "ESNext",
      "lib": ["ESNext", "DOM"],
      "jsx": "react-jsx",
      "declaration": true,
      "declarationMap": true,
      "outDir": "dist",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "isolatedModules": true
    },
    "include": ["src"]
  }
  